  <div class="kotak">
    <h2>TanyaDefran</h2>
    <p>Cari jawaban pelajaran</p>

    <input type="text" id="pertanyaan" placeholder="Tulis pertanyaan di sini">
    <br>
    <button onclick="cari()">Cari</button>

    <p id="jawaban"></p>
  </div>

  <script>
    function cari() {
      var tanya = document.getElementById("pertanyaan").value.toLowerCase();
      var jawab = document.getElementById("jawaban");

      if (tanya == "apa itu html") {
        jawab.innerHTML = "HTML adalah bahasa untuk membuat website.";
      } else {
        jawab.innerHTML = "Jawaban belum tersedia";
      }
    }
  </script>

